@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Clickable button</button>
<p><br />@cannotComplyMessage</p>

@code {
    private int currentCount = 0;
    private string? cannotComplyMessage;
    private string[] cannotComplyArr = {"That won't work.","You are not ready.","Impossible!","User used click. It's not very effective.","Cannot comply.","You cannot pass!"};

    private void IncrementCount()
    {
        cannotComplyMessage = cannotComplyArr[currentCount];
        Console.WriteLine(cannotComplyMessage);
        if (currentCount >= 5) currentCount = 0;
        else currentCount++;
        
    }
}
